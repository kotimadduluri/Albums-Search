<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="repo"
            type="com.koti.testapp.db.roomDB.RepoWithContributors" />
    </data>
  <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:cardUseCompatPadding="true"
      app:cardCornerRadius="@dimen/dp_5"
      app:cardBackgroundColor="@color/card_bg">
      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="@dimen/dp_100">
          <ImageView
              android:id="@+id/avatar"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              android:layout_width="@dimen/dp_100"
              android:layout_height="match_parent"
              loadAvatar="@{repo.repoEntity.avatar}"/>
          <TextView
              android:id="@+id/name"
              app:layout_constraintStart_toEndOf="@+id/avatar"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:text="@{repo.repoEntity.name}"
              android:maxLines="1"
              android:textStyle="bold"
              android:textSize="@dimen/sp_16"
              android:ellipsize="end"
              android:textColor="@color/white"
              android:layout_marginStart="@dimen/dp_10"
              android:layout_marginEnd="@dimen/dp_10"
              />
          <TextView
              android:id="@+id/description"
              app:layout_constraintStart_toEndOf="@+id/avatar"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/name"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:text="@{repo.repoEntity.description}"
              android:maxLines="3"
              android:textColor="@color/white"
              android:ellipsize="end"
              android:layout_marginEnd="@dimen/dp_10"
              android:layout_marginStart="@dimen/dp_10"/>
          <TextView
              android:id="@+id/contributorLable"
              app:layout_constraintStart_toEndOf="@+id/avatar"
              app:layout_constraintTop_toBottomOf="@+id/description"
              app:layout_constraintEnd_toStartOf="@+id/lastUpdate"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:textColor="@color/white"
              app:layout_constraintBottom_toBottomOf="parent"
              android:text="@{String.format(@string/contributors_text,repo.contributors.size())}"/>

          <TextView
              android:id="@+id/lastUpdate"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/description"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:text="@{repo.repoEntity.updatedTime}"
              android:maxLines="3"
              android:gravity="end"
              android:ellipsize="end"
              android:textColor="@color/white"
              android:textSize="@dimen/sp_12"
              android:layout_marginEnd="@dimen/dp_10"
              android:layout_marginStart="@dimen/dp_10"
              app:layout_constraintBottom_toBottomOf="parent"/>
      </androidx.constraintlayout.widget.ConstraintLayout>
  </androidx.cardview.widget.CardView>
</layout>